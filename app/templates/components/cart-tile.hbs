<div class="col-md-4 product-tile" style="background-image:url({{item.image}})">
  {{log product}}
  <h1>{{item.name}}</h1>
  <div class="product-description">
    Description: {{item.description}}<br>
    Price: {{item.price}}
  </div>
  <div class="cart-button">
    <button class="btn btn-primary" {{action 'remove' product}}>Remove from Cart</button>
  </div>

</div>
